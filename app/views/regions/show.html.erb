<div class="columns">
  <div class="column is-one-fifth">
    <div class="button is-primary is-light">
      <%= link_to 'Back to Regions', :back %>
    </div>
  </div>

  <div class="column">
    <h2 class="title is-2 has-text-centered"><%= @region.name %></h2>
  </div>

  <div class="column is-one-fifth">
    <p></p>
  </div>
</div>

<p class="mb-5">
  <%= @region.name %> region has approximately <%= @region.pals.count %> pals up to the latest update.
</p>

<div class="columns is-multiline">
  <% @region.pals.each do |pal| %>
    <div class="column is-one-quarter" >
      <div class="card">
         <header class="card-header">
          <p class="card-header-title">
            <%= pal.name %>
          </p>
        </header>
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="https://genshinlab.com/wp-content/uploads/2024/01/<%= pal.name %>-1.webp"
                 onerror="this.onerror=null; this.src='https://genshinlab.com/wp-content/uploads/2024/01/<%= pal.name %>.webp'"
                 alt="<%= pal.name %>">
          </figure>
        </div>
      </div>
    </div>
  <% end %>
</div>

